@using Bookstore.Web.Models.StaticData;

<style>
    .dropdown-menu {
        min-width: 200px;
    }

        .dropdown-menu.columns-2 {
            min-width: 400px;
        }

        .dropdown-menu.columns-3 {
            min-width: 600px;
        }

        .dropdown-menu.columns-4 {
            min-width: 800px;
        }

        .dropdown-menu li a {
            padding: 5px 10px;
            font-weight: 300;
        }

    .multi-column-dropdown {
        list-style: none;
        margin: 0px;
        padding: 0px;
    }

        .multi-column-dropdown li a {
            display: block;
            clear: both;
            line-height: 1.428571429;
            color: #333;
            white-space: normal;
        }

            .multi-column-dropdown li a:hover {
                text-decoration: none;
                color: #262626;
                background-color: #999;
            }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container" id="navbarColor03">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            Bookstore
        </a>

        <ul class="navbar-nav justify-content-end">
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <h4>
                        <img src="~/img/basket_icon.png" width="20" height="20" style="padding-right:5px;" />
                        <b>Cart: £0.00</b>
                    </h4>
                </a>
            </li>

            <li class="nav-item">
                <div class="list-group" style="border-left: 1px solid gray;padding-left:15px;padding-right:15px;">
                    <a href="#" class="list-group-item list-group-item-action" style="padding:0px;border:none">
                        <img src="~/img/user_icon.png" width="12" height="12" />
                        My account
                    </a>
                    <a href="#" class="list-group-item list-group-item-action" style="padding:0px;border:none;">
                        <img src="~/img/login_icon.png" width="12" height="12" />
                        Login
                    </a>
                </div>
            </li>

            <li class="nav-item">
                <div class="list-group" style="border-left: 1px solid gray;padding-left:15px;">
                    <a href="#" class="list-group-item list-group-item-action" style="padding:0px;border:none">
                        Help
                    </a>
                    <a href="#" class="list-group-item list-group-item-action" style="padding:0px;border:none;">
                        Contact
                    </a>
                </div>
            </li>
        </ul>
    </div>

</nav>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Books</a>
                    <ul class="dropdown-menu multi-column columns-4">
                        <li class="nav-item">
                            <a class="dropdown-item text-success" href="#"><b>Buy book</b></a>
                            <div class="dropdown-divider"></div>
                        </li>
                        <li class="nav-item" style="padding:15px">
                            <div class="row">
                                @for (int i = 0; i < 4; i++)
                                {
                                    <div class="col-sm-3" style="padding:0px">
                                        <ul class="multi-column-dropdown">
                                            @foreach (var category in Category.Categories.Skip(i * Category.Categories.Count / 4).Take(Category.Categories.Count / 4))
                                            {

                                                <li>
                                                    <a href="#">
                                                        @category
                                                    </a>
                                                </li>

                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>

            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>